{
  "manifest_version": 3,
  "name": "MODGPT ZIP Watcher",
  "version": "1.0.0",
  "description": "Watches for MODGPT memory update ZIPs and alerts on changes.",
  "permissions": [
    "notifications",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon_128.png"
  },
  "icons": {
    "128": "icons/icon_128.png"
  }
}